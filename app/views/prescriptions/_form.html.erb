<%= simple_form_for(prescription) do |f| %>
  <%= f.input :title, label: "titre" %>
  <%= f.input :start_at, label: "Date de début", as: :string, required: true, input_html: {class: "datepicker"}%>
  <%= f.input :end_at, label: "Date de fin", as: :string, required: true, input_html: {class: "datepicker"}%>
  <%= f.input :wish_time, label:"Heure souhaitée" %>
  <%= f.input :photo, as: :file %>
  <%= "Recurrence hebdomadaire" %> <br>
  <%=  " L M M J V S D "  %> <br>
  <%= f.check_box :lundi, as: :check_boxes %>
  <%= f.check_box :mardi, as: :check_boxes %>
  <%= f.check_box :mercredi, as: :check_boxes  %>
  <%= f.check_box :jeudi, as: :check_boxes  %>
  <%= f.check_box :vendredi, as: :check_boxes %>
  <%= f.check_box :samedi, as: :check_boxes  %>
  <%= f.check_box :dimanche, as: :check_boxes  %>
  <%= f.association :cares, label: "Soin(s) à réaliser",as: :check_boxes, multiple: true, label_method: :name, include_blank: false, value_method: :id %>
  <%= f.submit "Ajouter", class: "btn button mb-4" %>
<% end %>
