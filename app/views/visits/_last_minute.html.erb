<% if visit&.minutes.last %>
  <div class="last_minute">
    <h3>Dernier compte-rendu</h3>
    <div class="background">
      <p class="text-center"><%=visit.created_at.to_formatted_s(:db)%></p>
    <div class="minute-content">
      <div class="avatar-rond">
        <%= cl_image_tag(visit.user.avatar.key, :transformation=>[
        {:width=>400, :height=>400, :gravity=>"face", :crop=>"thumb"}
        ])%>
      </div>
      <div>
        <p id="minute-content"> <i class="fas fa-phone-volume"></i> <%=visit&.minutes&.last.content%></p>
        <p><% visit&.minutes&.last&.photos.each do |photo| %>
            <%= cl_image_tag(photo.key, crop: :thumb, id: "myImg") %>
        <% end %></p>
      </div>
    </div>
    </div>
  </div>
<% end %>


<!-- The Modal -->
<div id="myModal" class="modal">

<!-- The Close Button -->
<span class="close">&times;</span>

<!-- Modal Content (The Image) -->
<img class="modal-content" id="img01">
</div>
