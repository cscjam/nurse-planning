<div class="container footer-margin">
  <div class="row">
    <div class="col-12 col-md-6 col-lg-4">
        <div class="d-flex justify-content-between">
          <h2 id="patient-header">Rechercher une prescription(à revoir)</h2>
        </div>
        <%= simple_form_for :search, url: patient_prescriptions_path(@patient), method: :get do |f| %>
          <div class="search-form-control form-group">
             <input class="form-control string required" type="search" name="search" id="search" />
              <button name="button" type="submit" class="btn btn-flat">
                <i class="fas fa-search"></i>
              </button>
          </div>
        <% end %>
        <% if params[:search] %>
          <% if @prescriptions.count > 1 %>
            <p><%= @prescriptions.count %> résultats trouvés</p>
          <% elsif @prescriptions.count == 1 %>
            <p><%= @prescriptions.count %> résultat trouvé</p>
          <% else %>
            <p>Nous n'avons pas trouvé de résultats pour votre recherche</p>
          <% end %>
        <% end %>
      <% @prescriptions.each do |prescription| %>
        <div class="patient-card">
          <%= link_to prescription_path(prescription) do %>
            <%= render "display", prescription: prescription %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
